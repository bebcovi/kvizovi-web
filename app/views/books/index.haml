- @title = "Uređivanje knjiga"

%p= link_to "Natrag", current_school

%table

  %thead
    %tr
      %th Naslov
      %th Autor
      %th Era
      %th

  %tbody
    - @books.find_each do |book|
      %tr
        %td #{book.title}
        %td #{book.author}
        %td #{book.era}
        %td
          = edit_button "Izmjeni", edit_book_path(book)
          - if book.school == current_school
            |
            = delete_button "Izbriši", book_path(book)

%p= add_button "Nova knjiga", new_book_path
