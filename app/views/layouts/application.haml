!!!
%html{lang: "hr"}
  %head
    %meta{charset: "utf-8"}
    %meta{:"http-equiv" => "X-UA-Compatibile", content: "IE=edge,chrome=1"}
    %title Lektire Â· #{@title}
    %meta{name: "robots", content: "noindex"}
    = favicon_link_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "//use.typekit.net/nfo7hcu.js"
    %script try{Typekit.load();}catch(e){}

  %body{class: body_class}
    .navbar.navbar-static-top.navbar-inverse
      .navbar-inner
        = link_to "Lektire".prepend_icon("books"), root_path, class: "brand"
        = render "navigation"
        = render "log" if user_logged_in?
        = render "contact"

    = render partial: "flash", locals: {flash: flash}

    - if content_for? :hero_unit
      .hero-unit
        = content_for :hero_unit

    .container-fluid
      .main_content
        = render "layouts/#{controller.send(:sub_layout)}"
