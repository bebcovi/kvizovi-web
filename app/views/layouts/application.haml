%html{lang: 'hr'}

  %head

    %title Lektire Â· #{@title}
    %meta{charset: 'utf-8'}
    %meta{name: 'robots', content: 'noindex'}
    = favicon_link_tag
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=McLaren&subset=latin,latin-ext'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'

  %body{class: "#{params[:controller]} #{params[:action]}"}

    %header{role: 'banner'}

      %h1#logo Lektire

    %article{role: 'main'}

      - if user_logged_in?
        %p Prijavljeni ste kao #{link_to current_user, current_user} | #{logout_button "Odjava", logout_path}

      - flash.each do |name, message|
        %p{class: "flash_#{name}"}= message

      = yield
