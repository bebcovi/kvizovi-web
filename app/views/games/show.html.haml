- title "#{@quiz.name} · Kraj"

%h1 Rezultati

.game_progress.done
  - @questions_count.times do
    %div.done{style: "width: #{100.0 / @questions_count}%"}

%ol.game_score
  - @game.results.each do |player, score, score_percentage, player_number, rank|
    %li{class: "player_#{number(player_number)}"}
      %p
        %strong.username= player.username.prepend_icon("user")
        %span.rank Točno si odgovori#{player.male? ? "o" : "la"} na #{score} od #{@game.total_score} pitanja. Ti si <strong>#{rank}</strong>! :)
      .progress
        .bar{style: "width: #{score_percentage}%"}

= buttons do
  = action_button "Završi", new_game_path
