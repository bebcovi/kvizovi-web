- @title = "#{@quiz.name} Â· #{@question_number}. pitanje"

%h1= @quiz.name

%p#username= @player.username.prepend_icon("user")

%p#progress #{@question_number}/#{@questions_count}

= simple_form_for :game, url: game_path, method: :put, html: {class: @question.category_text} do |f|

  = render partial: "questions/question", object: @question, locals: {f: f}

  .controls
    = link_to "Prekini", game_path, method: :delete
    = f.button :button, "Odgovori".append_icon("arrow-right")
