- @title = "#{@quiz.name} Â· #{@question_number}. pitanje"

%h1= @quiz.name

#username= @player.username.prepend_icon("user")

#progress
  - @questions_count.times do |i|
    - if i < @question_number - 1
      %div{style: "width: #{100/@questions_count}%", data: {done: true}}
    - else
      %div{style: "width: #{100/@questions_count}%"}

= simple_form_for :game, url: game_path, method: :put, html: {class: @question.category} do |f|

  = render partial: "questions/question", object: @question, locals: {f: f}

  .controls
    = link_to "Prekini", game_path, method: :delete
    = f.button :button, "Odgovori".append_icon("arrow-right")
