- title "#{@quiz.name} Â· #{quiz_play.current_question[:number]}. pitanje"

%div{class: "l-player-#{number(quiz_play.current_student[:number])}"}
  .timer
    = icon("stopwatch")
    %span.timer-time

  %h1.align-middle
    = @quiz.name

  .question-username.align-middle.player-color
    = @student.full_name.prepend_icon("user")

  .progress.progress-small.progress-primary
    .bar{style: "width: #{quiz_progress_percentage}%"}

  = simple_form_for :play, url: save_answer_quiz_path, method: :put, defaults: {input_html: {name: "answer"}}, html: {data: {confirm_leave: true}, class: "l-play l-question-#{@question.category}"} do |f|

    = render "question", question: QuestionShuffling.new(@question), f: f

    = buttons do
      = cancel_button "Prekini", interrupt_quiz_path
      = submit_button "Odgovori"
