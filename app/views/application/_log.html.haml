= active_content_tag :li, params[:controller] == "profile", class: "dropdown" do
  = link_to current_user.username.prepend_icon("cog").append_icon("caret-down"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu
    %li= link_to "Uredi profil".prepend_icon("user"), account_profile_path
    %li= logout_button "Odjava", send("destroy_#{current_user.type}_session_path"), method: :delete
