- @title = @school.name

%h1= @school.name

%h2
  Učenici
  %span.count= @school.students.count

%table

  %colgroup
    %col.full_name
    %col.username
    %col.quiz_count
    %col.last_activity

  %thead
    %tr
      %th Ime i prezime
      %th.short Korisničko ime
      %th.short Broj odigranih kvizova
      %th Zadnja aktivnost

  %tbody
    - @school.students.each do |student|
      %tr
        %td= student.full_name
        %td.short= student.username
        %td.short= student.games.count
        %td= activity([student.updated_at, student.games.maximum(:created_at)].max)

%h2
  Kvizovi
  %span.count= @school.quizzes.count

%table

  %colgroup
    %col.quiz_name
    %col.quesion_count
    %col.last_activity

  %thead
    %tr
      %th Naziv kviza
      %th.short Broj pitanja
      %th Zadnja promjena

  %tbody
    - @school.quizzes.each do |quiz|
      %tr
        %td= quiz.name
        %td.short= quiz.questions.count
        %td= activity(quiz.updated_at)
