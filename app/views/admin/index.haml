- @title = "Admin"

= back_button "Početna", root_path

%h2 Škole

%table

  %thead
    %tr
      %th
      %th Naziv škole
      %th Broj učenika
      %th Broj kvizova
      %th Zadnja aktivnost

  %tbody
    - @schools.each_with_index do |school, index|
      %tr
        %td= "#{index + 1}."
        %td= link_to school.name, admin_school_path(school)
        %td= school.students.count
        %td= school.quizzes.activated.count
        %td= activity(school.quizzes.maximum(:updated_at))

%h2 Učenici

%table

  %thead
    %tr
      %th
      %th Ime i prezime
      %th Korisničko ime
      %th Škola
      %th Broj odigranih kvizova
      %th Zadnja aktivnost

  %tbody
    - @students.each_with_index do |student, index|
      %tr
        %td= "#{index + 1}."
        %td= student.full_name
        %td= student.username
        %td= student.school.name
        %td= student.games.count
        %td= activity(student.games.maximum(:created_at))
