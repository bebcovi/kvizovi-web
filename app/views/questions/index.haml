- if @scope.is_a?(Quiz) && (quiz = @scope)

  - @title = quiz.name

  = back_button "Natrag na kvizove", root_path

  %h1
    %span.name= quiz.name
    %span.section pitanja

  = simple_form_for :game_submission, url: game_path, method: :post do |f|
    = f.hidden_field :quiz_id, value: quiz.id
    = f.hidden_field :players_count, value: 1
    = buttons(f) do |b|
      = b.submit_button "Isprobajte kviz", (@questions.count == 0 ? {disabled: true} : {})

  %p= add_button "Novo pitanje", polymorphic_path([quiz, Question], action: "new")

  - if @questions.any?

    %ol.question_list
      = render collection: @questions, partial: "question_item", as: :question

  - else

    %p Ovaj kviz trenutno nema pitanja.

- elsif @scope.is_a?(School) && (school = @scope)

  - @title = "Pitanja"

  = back_button "Natrag", root_path

  %h1
    %span.name= school.name
    %span.section pitanja

  %p= add_button "Novo pitanje", polymorphic_path([school, Question], action: "new")

  - if @questions.any?

    %ol.question_list
      = render collection: @questions, partial: "question_item", as: :question

  - else

    %p Trenutno nemate pitanja.

- else

  - @title = "Pitanja"

  = back_button "Natrag", root_path

