- @title = @quiz.name

%p= back_button "Natrag", quizzes_path

%ol.questions

  = list_of @quiz.questions do |question|

    - present question do |question_presenter|
      .controls
        = question_presenter.edit_button "", @quiz, title: "Izmjeni"
        = question_presenter.preview_button "", @quiz, title: "Prikaži"
        = question_presenter.delete_button "", @quiz, title: "Izbriši"

      %p= question_presenter.content

%p= add_button "Novo pitanje", new_quiz_question_path(@quiz)
