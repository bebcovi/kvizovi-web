- @title = @quiz.name

= back_button "Natrag", quizzes_path

%h1
  %span.name= @quiz.name
  %span.section pitanja

- if @quiz.questions.any?

  %ol.questions
    = list_of @quiz.questions do |question|
      - present question do |question_presenter|
        .controls
          = question_presenter.edit_button "", @quiz, title: "Izmjeni"
          = question_presenter.delete_button "", @quiz, title: "Izbri≈°i"

        .name= question_presenter.content

- else

  %p Ovaj kviz trenutno nema pitanja.

%p= add_button "Novo pitanje", new_quiz_question_path(@quiz)
