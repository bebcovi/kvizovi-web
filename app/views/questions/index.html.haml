- title @quiz.name

.dropdown.new_question
  = add_button "Novo pitanje".append_icon("caret-down"), "#", class: "btn btn-primary dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu
    %li= link_to "Točno/netočno".prepend_icon("checkbox"),             new_quiz_question_path(category: "boolean")
    %li= link_to "Ponuđeni odgovori".prepend_icon("list-view"),        new_quiz_question_path(category: "choice")
    %li= link_to "Asocijacija".prepend_icon("shuffle"),                new_quiz_question_path(category: "association")
    %li= link_to "Pogodi tko/što je na slici".prepend_icon("picture"), new_quiz_question_path(category: "image")
    %li= link_to "Upiši točan odgovor".prepend_icon("pencil-2"),       new_quiz_question_path(category: "text")

= render "tag_filter"

- if @questions.any?

  %ol.question_list
    - @questions.each do |question|
      = content_tag_for :li, question, class: ("highlight" if flash[:highlight] == question.id) do
        = render partial: "questions/question_short", locals: {question: question}

- else

  %p.no_items= params[:query] ? "Nema pitanja s tim tagovima." : "Ovaj kviz trenutno nema pitanja."
