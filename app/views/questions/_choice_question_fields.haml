= f.error :base

%ol
  - input_collection(f) do |c|
    - number_of_fields(choice_question).times do |idx|
      %li= c.input :provided_answers, as: :string, label: false, placeholder: "Opcija #{idx + 1}", input_html: {value: choice_question.provided_answers[idx]}, hint: ("Ovo će biti točan odgovor".append_icon("arrow-up") if idx == 0)
