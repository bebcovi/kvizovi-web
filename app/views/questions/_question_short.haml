.dropdown.hover.actions
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    - if @scope.is_a?(Quiz)
      %li= view_button "Pogledaj", polymorphic_path([@scope, question.becomes(Question)])
      %li= edit_button "Izmjeni", polymorphic_path([@scope, question.becomes(Question)], action: "edit"), class: ""
      %li= copy_button "Dupliciraj", polymorphic_path([@scope, question.becomes(Question)], action: "copy")
      %li= remove_file_button "Ukloni iz kviza", polymorphic_path([@scope, question.becomes(Question)], action: "remove"), method: :post
    - elsif @scope.is_a?(School)
      - if params[:include]
        %li= view_button "Pogledaj", polymorphic_path([@scope, question.becomes(Question)], params.slice(:include))
        %li= add_file_button "Dodaj kvizu", polymorphic_path([@quiz, question.becomes(Question)], action: "include"), method: :post
      - else
        %li= view_button "Pogledaj", polymorphic_path([@scope, question.becomes(Question)])
        %li= edit_button "Izmjeni", polymorphic_path([@scope, question.becomes(Question)], action: "edit"), class: ""
        %li= copy_button "Dupliciraj", polymorphic_path([@scope, question.becomes(Question)], action: "copy")
        %li= delete_button "Izbri≈°i", polymorphic_path([@scope, question.becomes(Question)], action: "delete"), class: "delete_item"
    - else
      %li= view_button "Pogledaj", polymorphic_path([@scope, question.becomes(Question)])
      %li= download_button "Kopiraj kod sebe", polymorphic_path([@scope, question.becomes(Question)], action: "download"), method: :post

%span.category= categories[question.category.to_sym][1]
%span.name= question.content
