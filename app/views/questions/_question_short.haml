.dropdown.hover.actions
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    - if @scope.is_a?(Quiz)
      %li= edit_button "Izmjeni", polymorphic_path([@scope, question.becomes(Question)], action: "edit"), class: ""
      %li= link_to "Dupliciraj".prepend_icon("copy"), polymorphic_path([@scope, question.becomes(Question)], action: "copy")
      %li= link_to "Ukloni iz kviza".prepend_icon("file-remove"), polymorphic_path([@scope, question.becomes(Question)], action: "remove"), method: :post
    - elsif @scope.is_a?(School)
      - if params[:include]
        %li= link_to "Pogledaj".prepend_icon("file"), polymorphic_path([@scope, question.becomes(Question)])
        %li= link_to "Dodaj kvizu".prepend_icon("file-add"), polymorphic_path([@quiz, question.becomes(Question)], action: "include"), method: :post
      - else
        %li= link_to "Pogledaj".prepend_icon("file"), polymorphic_path([@scope, question.becomes(Question)])
        %li= link_to "Dupliciraj".prepend_icon("copy"), polymorphic_path([@scope, question.becomes(Question)], action: "copy")
        %li= edit_button "Izmjeni", polymorphic_path([@scope, question.becomes(Question)], action: "edit"), class: ""
        %li= delete_button "Izbri≈°i", polymorphic_path([@scope, question.becomes(Question)], action: "delete"), class: "delete_item"
    - else
      %li= link_to "Pogledaj".prepend_icon("file"), polymorphic_path([@scope, question.becomes(Question)])
      %li= link_to "Kopiraj kod sebe".prepend_icon("file-download"), copy_school_question_path(current_user, question)

%span.category= categories[question.category.to_sym][1]
%span.name= question.content
