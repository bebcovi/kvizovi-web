= content_tag_for :li, question.object, class: "list-pretty-item" do
  .pull-right
    = edit_button "", edit_account_quiz_question_path(@quiz, question), title: "Izmijeni"
    = delete_button "", account_quiz_question_path(@quiz, question), title: "Izbriši", remote: true, data: {confirm: "Jeste li sigurni da želite izbrisati ovo pitanje?"}

  %span.space-quart-right= question.icon
  %span.list-pretty-item-content= question.content

  %li{class: "l-question-#{question.category} list-pretty-item list-pretty-content"}
    = image_tag question.image.url(:small), class: "img-polaroid space-half-bottom" if question.image?
    = render "questions/answer/#{question.category}", question: question, answer: question.answer
