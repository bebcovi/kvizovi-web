<% if @quiz.persisted? %>
  $("#quizzes").find(".no-items").remove()
  $("#quiz-list").prepend("<%= j render(@quiz) %>")
  $(".btn[title]").tooltip()
  $(".help-block").remove()
  $("#new_quiz").find("[type='text']").val("").blur()
<% else %>
  if ($("#new_quiz").find(".help-block").length)
    var errorBlock = $("#new_quiz").find(".help-block")
  else
    var errorBlock = $("<span>", {class: "help-block"}).appendTo("#new_quiz")

  errorBlock.text("<%= @quiz.errors.full_messages.first %>")
<% end %>
