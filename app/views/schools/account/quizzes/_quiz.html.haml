.list-pretty-item-actions.dropdown.dropdown-hover
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    %li= link_to "Pitanja".prepend_icon("clipboard"), account_quiz_questions_path(quiz)
    %li= edit_button "Izmijeni", edit_account_quiz_path(quiz), class: ""
    %li= link_to "Prati".prepend_icon("eye"), played_quizzes_path(quiz_id: quiz.id)
    %li= delete_button "Izbri≈°i", delete_account_quiz_path(quiz), class: "item-danger confirm-delete"

= render partial: "activation_button", locals: {quiz: quiz}

%span.list-pretty-item-content
  = quiz.name
  %span.badge.badge-info= quiz.questions.count
