= content_tag_for :li, quiz, class: "list-pretty-item" do
  .pull-right
    = button icon("clipboard"), account_quiz_questions_path(quiz), title: "Pitanja"
    = edit_button "", edit_account_quiz_path(quiz), title: "Izmijeni"
    = button icon("eye"), played_quizzes_path(quiz_id: quiz.id), title: "Prati"
    = delete_button "", account_quiz_path(quiz), remote: true, title: "Izbriši", data: {confirm: "Jeste li sigurni da želite izbrisati ovaj kviz?"}

  = render "activation_button", quiz: quiz

  %span.list-pretty-item-content
    = quiz.name
    %span.badge.badge-info= quiz.questions.count
