- @title = @school.name

%table.profile_info
  %colgroup
    %col.field
    %col.value
  %tbody
    %tr
      %th Ime škole
      %td= @school.name
    %tr
      %th Korisničko ime
      %td= @school.username
    %tr
      %th Email
      %td= @school.email
    %tr
      %th Tip škole
      %td= @school.level
    %tr
      %th Mjesto
      %td= @school.place
    %tr
      %th Županija
      %td= @school.region
    %tr
      %th Tajni ključ
      %td= @school.key

.btn-toolbar.edit_profile
  .btn-group
    = edit_button "Izmjeni profil", edit_school_path(@school)
    = change_password_button "Izmjeni lozinku", edit_password_path

%p.questions_privacy
  - content = capture_haml do
    %ul.unstyled_list
      %li= "Pitanja mogu koristiti i druge škole.".prepend_icon("globe")
      %li= "Pitanja ne vide druge škole.".prepend_icon("key")
  - attributes = {title: "Privatnost pitanja", data: {content: content.delete("\n")}}
  - if @school.public_questions?
    = link_to "Pitanja su javna".prepend_icon("globe"), toggle_question_privacy_school_path(@school), {class: "btn btn-success", method: :put}.merge(attributes)
  - else
    = link_to "Pitanja su tajna".prepend_icon("key"), toggle_question_privacy_school_path(@school), {class: "btn btn-inverse", method: :put}.merge(attributes)

%p= delete_profile_button "Izbriši korisnički račun", delete_school_path(@school)
