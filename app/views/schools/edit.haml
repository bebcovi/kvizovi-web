= simple_form_for @school do |f|

  = f.input :name
  = f.input :username
  = f.input :email
  = f.input :level, collection: ["Osnovna", "Srednja"], include_blank: false
  = f.input :place
  = f.input :public_questions
  = f.input :region, collection: Location.regions, include_blank: false
  = f.input :key

  = buttons(f) do |b|
    = b.cancel_button "Odustani", @school
    = b.submit_button "Spremi"
