- @title = "Nova škola"

= simple_form_for @school do |f|

  = f.input :name
  = f.input :level, collection: School::LEVELS.to_a, value_method: :first, label_method: :last, prompt: "Izaberite..."
  = f.input :username
  = f.input :password
  = f.input :password_confirmation
  = f.input :key, as: :password, hint: "Ovo će vaši učenici morati napisati pri registraciji".append_icon("arrow-up")

  .controls
    = link_to "Odustani", school_login_path
    = f.button :submit, "Registriraj se"
