- title "Izmjena lozinke"

= simple_form_for @password, url: password_path, method: :put do |f|

  = f.input :old, input_html: {autofocus: current_page?(action: "edit")}
  = f.input :new
  = f.input :new_confirmation

  = buttons do
    = cancel_button "Odustani", profile_path
    = submit_button "Spremi"
