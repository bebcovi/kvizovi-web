.list-pretty-item-actions.dropdown.dropdown-hover
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    %li= link_to "Pitanja".prepend_icon("clipboard"), quiz_questions_path(quiz)
    %li= edit_button "Izmijeni", edit_quiz_path(quiz), class: "" if quiz.school == current_user
    %li= link_to "Prati".prepend_icon("eye"), played_quizzes_path(quiz_id: quiz.id) if quiz.school == current_user
    %li= delete_button "Izbri≈°i", delete_quiz_path(quiz), class: "item-danger confirm-delete" if quiz.school == current_user

= render "activation_button", {quiz: quiz}

%span.list-pretty-item-content
  = quiz.name
  %span.count= quiz.questions.count
  - if params[:scope].present?
    %span.school= quiz.school.name
