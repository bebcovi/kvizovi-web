.list-pretty-item-actions.dropdown.dropdown-hover
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    %li= link_to "Pitanja".prepend_icon("clipboard"), quiz_questions_path(quiz)
    %li= edit_button "Izmijeni", edit_quiz_path(quiz), class: "" # don't apply default classes
    %li= link_to "Prati".prepend_icon("eye"), played_quizzes_path(quiz_id: quiz.id)
    %li= delete_button "Izbri≈°i", delete_quiz_path(quiz), class: "item-danger"

= remote_form_for quiz do |f|
  = f.input :activated, as: :hidden, input_html: {value: !quiz.activated?}
  - if quiz.activated?
    = f.button :button, icon("lamp-full"), class: "btn btn-success toggle-activation space-quart-right", title: "Deaktiviraj"
  - else
    = f.button :button, icon("lamp"), class: "btn toggle-activation space-quart-right", title: "Aktiviraj", method: :put

%span.list-pretty-item-content
  = quiz.name
  %span.count= quiz.questions.count
