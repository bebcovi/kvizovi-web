- title @quiz.name

= breadcrumbs link_to("Kvizovi", quizzes_path), title

.quiz-display.text-center
  %h2.quiz-name
    = title
    %small= @quiz.school.name

  .quiz-image
    .thumbnail
      = image_tag @quiz.image.url(:medium)

  .quiz-meta.row
    .col-sm-2.col-sm-offset-4
      .quiz-meta-name
        = icon("stopwatch")
      .quiz-meta-value
        = @quiz.time_per_question

    .col-sm-2
      .quiz-meta-name
        = icon("question")
      .quiz-meta-value
        = @quiz.questions.count
        pitanja

  = primary_button "Zapoƒçni kviz!", start_quiz_path(@quiz), method: :post, class: "btn-lg"
