%ul.nav.pull-left
  = active_content_tag :li, params[:controller] == "quizzes" do
    = link_to "Kvizovi", quizzes_path
  = active_content_tag :li, params[:controller] == "students" do
    = link_to "Učenici", students_path
  = active_content_tag :li, params[:controller] == "played_quizzes" do
    = link_to "Odigrani kvizovi", played_quizzes_path

%ul.nav.pull-right
  - unless current_user.completed_survey?
    = active_content_tag :li, params[:controller] == "surveys" do
      = link_to "Anketa", new_survey_path, data: ({toggle: "tooltip", title: "Pomognite nam u testiranju :)", placement: "bottom", trigger: "manual"} unless params[:controller] == "surveys")
  = active_content_tag :li, params[:action] == "tour" do
    = link_to "Vodič", tour_path
  = active_content_tag :li, params[:action] == "contact" do
    = link_to "Kontakt", contact_path
  = render "log"
