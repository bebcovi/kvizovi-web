.dropdown.hover.actions
  = link_to icon("chevron-left"), "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
  %ul.dropdown-menu.pull-right
    %li= change_password_button "Izmjeni lozinku", new_password_student_path(student), class: nil
    %li= delete_button "Izbriši", student_path(student), confirm: "Jeste li sigurni da želite izbrisati ovog učenika?", method: :delete, class: nil

%span.name
  = student.full_name
  %span.username= student.username
