- @title = "Izmjena profila"

= simple_form_for @student do |f|

  = f.error :base

  = f.input :first_name
  = f.input :last_name
  = f.input :gender, collection: ["Muško", "Žensko"], as: :radio_buttons
  = f.input :year_of_birth, collection: (30.years.ago.year..Time.now.year).to_a.reverse, include_blank: false
  = f.input :grade, collection: classes, as: :grouped_select, group_label_method: :first, group_method: :last
  = f.input :username
  = f.input :email

  = buttons(f) do |b|
    = b.cancel_button "Odustani", @student
    = b.submit_button "Spremi"
