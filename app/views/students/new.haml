- @title = "Novi uÄenik"

= simple_form_for @student, defaults: {required: false} do |f|

  = f.error :base

  = f.input :first_name
  = f.input :last_name
  = f.input :username
  = f.input :password
  = f.input :password_confirmation

  = f.input :grade, collection: classes, as: :grouped_select, group_label_method: :first, group_method: :last, prompt: "Izaberi..."
  = f.input :school_key

  .controls
    = link_to "Odustani", student_login_path
    = f.button :submit, "Registriraj se"
