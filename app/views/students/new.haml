- @title = "Novi učenik"

= simple_form_for @student do |f|

  = f.input :first_name
  = f.input :last_name
  = f.input :gender, collection: ["Muško", "Žensko"], as: :radio_buttons
  = f.input :year_of_birth, collection: (30.years.ago.year..Time.now.year).to_a.reverse, prompt: "Izaberite..."
  = f.input :username
  = f.input :password
  = f.input :password_confirmation

  = f.input :grade, collection: classes, as: :grouped_select, group_label_method: :first, group_method: :last, prompt: "Izaberi..."
  = f.input :school_key

  .buttons
    = link_to "Odustani", student_login_path
    = f.button :submit, "Registriraj se"
