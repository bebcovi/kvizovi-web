- @title = @student.full_name

%table.profile_info
  %colgroup
    %col.field
    %col.value
  %tbody
    %tr
      %th Ime i prezime
      %td= @student.full_name
    %tr
      %th Korisničko ime
      %td= @student.username
    %tr
      %th Škola
      %td= @student.school.name
    %tr
      %th Razred
      %td= @student.grade
    %tr
      %th Spol
      %td= @student.gender
    %tr
      %th Godina rođenja
      %td= @student.year_of_birth.to_s + "."

.btn-toolbar.edit_profile
  .btn-group
    = edit_button "Izmjeni profil", edit_student_path(@student)
    = change_password_button "Izmjeni lozinku", edit_password_path

%p= delete_profile_button "Izbriši korisnički račun", delete_student_path(@student)
