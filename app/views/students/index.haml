- @title = "Uređivanje učenika"

%p= link_to "Natrag", admin_path

%table

  %tr
    %th Ime
    %th Prezime
    %th Korisničko ime
    %th Razred
    %th

  - @students.find_each do |student|
    %tr
      %td #{student.first_name}
      %td #{student.last_name}
      %td #{student.username}
      %td #{student.grade}.
      %td
        = edit_button "Izmjeni", edit_student_path(student)
        |
        = delete_button "Izbriši", student_path(student)

%p= add_button "Novi učenik", new_student_path
