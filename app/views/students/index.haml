- @title = "Uređivanje učenika"

%p= link_to "Natrag", current_school

%table

  %thead
    %tr
      %th Ime
      %th Prezime
      %th Korisničko ime
      %th Razred
      %th

  %tbody
    - @students.find_each do |student|
      %tr
        %td #{student.first_name}
        %td #{student.last_name}
        %td #{student.username}
        %td #{student.grade}.
        %td #{delete_button "Izbriši", student_path(student)}
